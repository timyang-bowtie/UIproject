<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:visibility="visible"
            android:gravity="center_vertical"
            app:theme="@style/ToolbarColoredBackArrow"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp" />
            <ImageView
                android:id="@+id/imagesearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/newsearch"
                android:layout_gravity="right"
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                android:foregroundGravity="left" />
        </android.support.v7.widget.Toolbar>
        <View
            android:id="@+id/viewbar"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:layout_height=".5dp"
            android:layout_width="fill_parent"/>
        <LinearLayout
            android:id="@+id/tabbar"
            android:orientation="horizontal"
            android:layout_below="@+id/viewbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/content"
            android:layout_below="@+id/tabbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemIconTint="@color/white"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/png_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/primary">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pang"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Lorem ipsum"/>
            </RelativeLayout>
           <RelativeLayout
               android:id="@+id/txt_layout"
               android:layout_below="@+id/png_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


           </RelativeLayout>
            <View
                android:layout_marginTop="30dp"
                android:id="@+id/view_layout"
                android:layout_below="@+id/txt_layout"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/frgament1_layout"
                android:layout_below="@+id/view_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emoji"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fragment1"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:id="@+id/view_layout1"
                android:layout_below="@+id/frgament1_layout"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"/>
            <RelativeLayout
                android:id="@+id/frgament2_layout"
                android:layout_below="@+id/view_layout1"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emoji"/>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fragment2"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black" />

            </RelativeLayout>
            <View
                android:id="@+id/view_layout2"
                android:layout_below="@+id/frgament2_layout"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"/>
            <RelativeLayout
                android:id="@+id/frgament3_layout"
                android:layout_below="@+id/view_layout2"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emoji"/>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fragment3"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black" />

            </RelativeLayout>
            <View
                android:id="@+id/view_layout3"
                android:layout_below="@+id/frgament3_layout"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"/>
            <RelativeLayout
                android:id="@+id/frgament4_layout"
                android:layout_below="@+id/view_layout3"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emoji"/>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fragment4"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black" />

            </RelativeLayout>
            <View
                android:layout_marginTop="30dp"
                android:id="@+id/view_layout4"
                android:layout_below="@+id/frgament4_layout"
                android:layout_width="match_parent"
                android:background="@color/hintcolor"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/setting_layout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/view_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:hint="Settings"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/frgament5_layout"
                android:layout_below="@+id/setting_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emoji"/>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>